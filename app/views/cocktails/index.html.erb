<div class="banner">
  <h1 class="text-center my-5 p-3" style="size: 10em">th<i class="fas fa-cocktail"></i>rsty</h1>
<!--   <h2 class="text-center my-5 p-3">cocktails for days</h2>
 -->

   <button type="button" class="btn btn-success" style=" color:white; font-size: 1.5em; align-items: center; display: block; position: relative; margin: 0 auto" data-toggle="modal" data-target="#exampleModal">Mix a new cocktail</button>

  <div class="card-deck d-flex flex-wrap m-3 p-3">

    <% @cocktails.each do |cocktail| %>

    <div class="card card-image p-3 m-3" style="background-image:
    linear-gradient(
      rgba(0,0,0,0.5),
      rgba(0,0,0,0)),
      url('<%= cocktail.photo %>'); background-size: cover">
      <div class="card-body">
        <div class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></div>
        <div class="card-body"></div>
      </div>
    </div>

    <% end %>
  </div>
</div>


<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content bg-dark text-white">
      <div class="modal-header">
        <h3 class="modal-title" id="exampleModalLabel">Mine's a pint</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <%= simple_form_for @cocktail do |f| %>
          <%= f.input :name, label: "What's your new cocktail called?" %>
          <%= f.input :photo, label: "Upload a cool photo" %>
          <%= f.input :photo_cache, as: :hidden %>

      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.button :submit, "Mix me!" %>

        <% end %>

      </div>
    </div>
  </div>
</div>

