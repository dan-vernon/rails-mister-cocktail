  <div class="banner py-3">

  <h2 class="cocktail-name"><%= @cocktail.name %></h2>
 </div>
      <div class="d-flex justify-content-between">
        <div class="doses-form">

        <ul style="style="background-image: linear-gradient(rgba(241,157,148,1), rgba(200,200,200,0.1))">

                <% @cocktail.doses.each do |d| %>
                <li class="list-item">

                  <%= d.description %> | <%= d.ingredient.name %>
                  <%= link_to(dose_path) do %>
                    <i class="far fa-trash-alt"></i>
                  <% end %>
                <% end %>
                </li>

        </ul>
        <hr>
          <div class="p-5 card rounded">
            <%= simple_form_for [@cocktail, @dose] do |f| %>
             <%= f.input :description, label: "Add a dose" %>
             <%= f.association :ingredient, label: "Pick an ingredient" %>
             <%= f.button :submit %>
            <% end %>
          </div>
      </div>

<img src="https://picsum.photos/800/600?image=<%= @cocktail.id + 100 %>" alt="" style="filter:sepia(50%)" width="50%" height="50%" class="rounded">
      </div>
